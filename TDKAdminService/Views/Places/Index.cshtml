@model IEnumerable<TDKAdminService.Models.Place>

@{
    ViewBag.Title = "Miejsca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Miejsca</h2>

<p>
    @Html.ActionLink("Dodaj nowe", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.placeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlaceAddess)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.createdAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.updatedAt)
        </th>
        <th>
            Opcje
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.placeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlaceAddess)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.createdAt.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.updatedAt.DateTime)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.id }) 
            @Html.ActionLink("Szczegóły", "Details", new { id=item.id }) 
            @Html.ActionLink("Usuń", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
